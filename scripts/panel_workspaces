focused="54adcd"
active="666666"

desktops() {
    for desktop in `bspc query -D`
    do
        if [ $desktop = "`bspc query -d focused -D`" ]
        then
            desktops="$desktops %{F#FF$focused}$desktop%{F-}"
        else
            desktops="$desktops %{F#FF$active}$desktop%{F-}"
        fi
    done
    echo $desktops
}

while :; do
    output=$(desktops)
    echo "W$output"
    sleep 0.1
done
